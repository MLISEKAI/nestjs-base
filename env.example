# ========================================
# APPLICATION CONFIGURATION
# ========================================
PORT=3001
NODE_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
APP_NAME=Diamond Wallet

# ========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ========================================
# For Local Development (database on host machine)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nestjs_db?schema=public&connection_limit=20&pool_timeout=20

# For Docker (database in container)
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nestjs_db?schema=public&connection_limit=20&pool_timeout=20

# Docker PostgreSQL Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nestjs_db
POSTGRES_PORT=5432

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_TOKEN_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ISSUER=nestjs-app

# ========================================
# REDIS CONFIGURATION (Optional - for caching)
# ========================================
# For Local Development (Redis on host machine)
REDIS_URL=redis://localhost:6379

# For Docker (Redis in container)
# REDIS_URL=redis://:redis_password@redis:6379

# Docker Redis Settings
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Note: If not set, caching will be disabled but app will still work
# For Redis with password: redis://:password@localhost:6379
# For Redis Cloud: redis://default:password@host:port

# ========================================
# OAUTH CONFIGURATION
# ========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/oauth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/auth/oauth/facebook/callback

# ========================================
# FILE UPLOAD - CLOUDINARY
# ========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Firebase (Deprecated - using Cloudinary instead)
# FIREBASE_SERVICE_ACCOUNT_PATH=
# FIREBASE_PROJECT_ID=
# FIREBASE_STORAGE_BUCKET=

# ========================================
# EMAIL CONFIGURATION
# ========================================
EMAIL_PROVIDER=console
# Options: console | smtp | sendgrid | ses

# SMTP Configuration (for Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@example.com

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES (Alternative)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ========================================
# PAYMENT GATEWAY - PAYPAL
# ========================================
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
# Options: sandbox | live

# ========================================
# SECURITY & RATE LIMITING
# ========================================
# Add if needed
# RATE_LIMIT_TTL=60
# RATE_LIMIT_MAX=10

# ========================================
# NOTES
# ========================================
# 1. Copy this file to .env and update values
# 2. Never commit .env to git
# 3. Change all passwords in production
# 4. Use strong JWT secrets (min 32 characters)
# 5. For Docker: Use container names as hosts (postgres, redis)
# 6. For Local: Use localhost as host
